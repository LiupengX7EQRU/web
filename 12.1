             <script>
                 $.getJSON("http://restcountires.com/v3,1/region/europe",function (countires){
                    countires.sort(function(a,b){
                        return b.population - a.population;
                    });
                    $.each(countires,function(i,countires){
                        const row =
                        <tr>
                            <th scope ="row">$(i+1)</th>
                            <td>$(countires.name.common)</td>
                            <td>$(countires.population.toLocaleString)("en-US")</td>
                        </tr> ;
                        console.log(row);
                        $("today").append(row);   
                    })
                })
             </script>    
